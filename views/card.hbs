<h1>Корзина</h1>
<div id="card">
{{#if courses.length}}
    <table>
        <tbody>
            <thead>
            <tr>
                <th>Название курса</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
            </thead>
        </tbody>
        {{#each courses}}
            <tr>
                <td>{{ title }}</td>
                <td>{{ count }}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{ id }}">Удалить</button></td>
            </tr>
        {{/each}}
    </table>

    <p><strong>Цена: </strong> <span class="price">{{ price }}</span></p>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
</div>
